@model IEnumerable<MitsubishiMotorsPartsECommerce.BLL.DTOs.SalesOrderHeaderDTO>

@{
    ViewData["Title"] = "Order Page";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Order</h1>
</div>

<div class="col-lg-12">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Order Page</h6>
        </div>
        <div class="card-body">

            <table class="table table-hover table-responsive" id="dataTable">
                <thead>
                    <tr>
                        <th>Order ID</th>
                        <th>Order Date</th>
                        <th>Total Amount</th>
                        <th>Order Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td>@order.OrderID</td>
                            <td>@order.OrderDate.ToString("dddd, dd/MM/yyyy HH:mm:ss")</td>
                            <td>@string.Format("Rp {0:N0}", order.TotalAmount)</td>
                            <td>@order.OrderStatus</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>
